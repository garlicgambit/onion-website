# {{ ansible_managed }}

###########
### NAT ###
###########

*nat

:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]

################
### REDIRECT ###
################

### REDIRECT DNS traffic to Tor ###
-A OUTPUT -o eth0 -p udp -m udp --dport 53 -m state --state NEW -m owner --uid-owner 0 -j REDIRECT --to-ports 9053

### REDIRECT HTTP traffic to Tor ###
-A OUTPUT -o eth0 -p tcp -m tcp --dport 80 --tcp-flags FIN,SYN,RST,ACK SYN -m state --state NEW -m owner --uid-owner 0 -j REDIRECT --to-ports 9550

COMMIT

########################
### DEFAULT POLICIES ###
########################

*filter

### DROP all traffic by default ###
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT DROP [0:0]

###################
### INPUT RULES ###
###################

### Drop invalid packets ###
-A INPUT -m state --state INVALID -j DROP

### Drop invalid syn packets ###
-A INPUT -p tcp --tcp-flags ALL ACK,RST,SYN,FIN -j DROP
-A INPUT -p tcp --tcp-flags SYN,FIN SYN,FIN -j DROP
-A INPUT -p tcp --tcp-flags SYN,RST SYN,RST -j DROP

### Drop incoming fragments ###
-A INPUT -f -j DROP

### Drop incoming xmas packets ###
-A INPUT -p tcp --tcp-flags ALL ALL -j DROP

### Drop incoming null packets ###
-A INPUT -p tcp --tcp-flags ALL NONE -j DROP

### Permit localhost traffic ###
-A INPUT -i lo -j ACCEPT

### Permit connection tracking traffic ###
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

### Permit incoming SSH traffic - disabled by default ###
#-A INPUT -i eth0 -p tcp -m tcp --dport 22 --tcp-flags FIN,SYN,RST,ACK SYN -m state --state NEW -m limit --limit 1/m --limit-burst 5 -j ACCEPT

### Logging - disabled by default ###
#-A INPUT -j LOG

### Drop INPUT traffic by default ###
-A INPUT -j DROP

####################
### OUTPUT RULES ###
####################

### Drop invalid packets ###
-A OUTPUT -m state --state INVALID -j DROP

### Prevent Tor packet leaks ###
-A OUTPUT ! -s 127.0.0.1/32 ! -d 127.0.0.1/32 ! -o lo -p tcp -m tcp --tcp-flags FIN,ACK FIN,ACK -j DROP
-A OUTPUT ! -s 127.0.0.1/32 ! -d 127.0.0.1/32 ! -o lo -p tcp -m tcp --tcp-flags RST,ACK RST,ACK -j DROP

### Permit localhost traffic ###
-A OUTPUT -o lo -j ACCEPT

### Permit connection tracking traffic ###
-A OUTPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

### Permit DHCP traffic ###
-A OUTPUT -o eth0 -p udp -m udp --dport 67 -m state --state NEW -m owner --uid-owner 0 -j ACCEPT

### Permit DNS traffic to route through Tor proxy ###
-A OUTPUT -d 127.0.0.1/32 -o eth0 -p udp -m udp --dport 9053 -m state --state NEW -m owner --uid-owner 0 -j ACCEPT

### Permit TCP traffic to route through Tor proxy ###
-A OUTPUT -d 127.0.0.1/32 -o eth0 -p tcp -m tcp --dport 9550 --tcp-flags FIN,SYN,RST,ACK SYN -m state --state NEW -m owner --uid-owner 0 -j ACCEPT

### Permit Tor traffic ###
-A OUTPUT -o eth0 -p tcp -m tcp --tcp-flags FIN,SYN,RST,ACK SYN -m state --state NEW -m owner --uid-owner debian-tor -j ACCEPT

### Logging - disabled by default ###
#-A OUTPUT -j LOG

### Drop OUTPUT traffic by default ###
-A OUTPUT -j DROP

COMMIT
